<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ArtDetailFragment">

   <ImageView
       android:id="@+id/art_detail_image"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:adjustViewBounds="true"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toTopOf="@id/art_detail_download_button"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent" />

   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       app:layout_constraintBottom_toTopOf="@id/art_detail_download_button"
       android:layout_marginBottom="@dimen/art_detail_image_bottom_line"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:background="@color/white"/>

   <Button
       android:id="@+id/art_detail_download_button"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/art_detail_download"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/art_detail_image" />

</androidx.constraintlayout.widget.ConstraintLayout>